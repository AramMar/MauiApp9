<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                          xmlns:md="clr-namespace:Material.Components.Maui;assembly=Material.Components.Maui"
             x:Class="MauiApp9.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
      <md:TextField
            HorizontalOptions="Start"
            Style="{DynamicResource OutlinedTextFieldStyle}"
            WidthRequest="250" />
      <md:TextField
            HorizontalOptions="Start"
            Icon="Search"
            Style="{DynamicResource OutlinedTextFieldStyle}"
            WidthRequest="250" />
          
      <md:Button Style="{DynamicResource FilledButtonStyle}" Text="Login" />

    </VerticalStackLayout>
    </ScrollView>

</ContentPage>
